<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<!-- Configuración para Entity Framework -->
		<section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
	</configSections>

	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>

	<connectionStrings>
		<!-- Cadena de conexión para PostgreSQL -->
		<add name="PostgresConnection" connectionString="Host=localhost;Database=productosdb;Username=ecovida;Password=ecovida" providerName="Npgsql" />
	</connectionStrings>

	<system.web>
		<compilation debug="true" targetFramework="4.7.2" />
		<httpRuntime targetFramework="4.7.2" />
	</system.web>

	<system.serviceModel>
		<services>
			<!-- Definición del servicio SOAP -->
			<service name="soap_productos.Service1">
				<host>
					<baseAddresses>
						<!-- Dirección del servicio -->
						<add baseAddress="http://localhost:51073/Service1.svc" />
					</baseAddresses>
				</host>
				<!-- Configuración del endpoint para el servicio SOAP -->
				<endpoint address="" binding="basicHttpBinding" contract="soap_productos.IService1" />
				<!-- Configuración para metadata (MEX) -->
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
			</service>
		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior>
					<!-- Habilitar metadata -->
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
					<!-- Habilitar depuración de excepciones -->
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

		<!-- Mapeo de protocolo para HTTPS -->
		<protocolMapping>
			<add binding="basicHttpsBinding" scheme="https" />
		</protocolMapping>

		<serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
	</system.serviceModel>

	<system.webServer>
		<modules runAllManagedModulesForAllRequests="true" />
		<directoryBrowse enabled="true" />
	</system.webServer>

	<entityFramework>
		<providers>
			<!-- Configuración para el proveedor de PostgreSQL -->
			<provider invariantName="Npgsql" type="Npgsql.NpgsqlServices, EntityFramework6.Npgsql" />
		</providers>
	</entityFramework>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
</configuration>
